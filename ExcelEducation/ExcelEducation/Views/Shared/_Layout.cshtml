<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <!-- css -->
    <link rel="stylesheet" type="text/css" href="@Url.Content("https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css")" />

    <!-- js -->
    <script src="@Url.Content("https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.blockUI.js")"></script>
    <style type="text/css">
        .navbar-inverse {
            background-color: #001e3e;
            border-color: #001e3e;
        }
    </style>
    <title>Admin</title>
</head>
<body>
    <div class="container">

        <div class="row">
            <div class="col-md-8 col-sm-8 col-xs-8" style="padding-top: 12px;">
                <a href="/"><img src="images/logo.png" class="img-responsive" alt="Logo" /></a>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-4" style="padding-top: 12px;">
                <div class="btn btn-danger">Logout</div>
            </div>
        </div>

    </div>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Control Panel</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="color:white;">Home <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="user_management.aspx">Change Password</a></li>
                            <li><a href="Post_Latest_Update.aspx">News & Notice</a></li>
                            <li>@Html.ActionLink("Flash", "Index", "Flash")</li>
                            
                            <li><a href="ExternalLinks.aspx">External Links</a></li>
                            <li><a href="PostContact.aspx">Contact Us</a></li>
                            <li><a href="Statistics.aspx">Statistics</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="color:white;">Menu <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="PageHead.aspx">Page Head</a></li>
                            <li><a href="SubMenu.aspx">Sub Menu</a></li>
                        </ul>
                    </li>
                    <li><a href="post_faculties.aspx" style="color:white;">Staff</a></li>

                    <li><a href="post_data.aspx" style="color:white;">Sub Menu Data</a></li>


                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="color:white;">Gallery <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="post_pastevents.aspx">Photo Gallery</a></li>
                            <li><a href="post_studentvideo.aspx">Vedio Gallery</a></li>
                            <li><a href="post_media.aspx">News & Media</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid" style="min-height:600px">
        @RenderBody()
    </div>
    <footer id="footer" class="footer divider layer-overlay overlay-dark-8">

        <div class="footer-bottom bg-black-333">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-5">
                        <p class="font-11 text-black-777 m-0 copy-right">&copy; All Rights Reserved</p>
                    </div>
                    <div class="col-md-6 col-sm-7 text-right">
                        <p class="font-11 text-black-777 m-0 copy-right">
                            Powered by : <a href="https://www.ravisolutions.com/" target="_blank"> Ravi Solutions</a>

                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
