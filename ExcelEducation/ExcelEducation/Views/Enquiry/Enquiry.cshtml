@model DAL.Models.EnquiryModel

@{
    ViewBag.Title = "Contact Page";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}


<!-- breadcrumb area start -->
<section class="breadcrumb__area include-bg  breadcrumb__overlay" data-background="@Url.Content("~/Content/home/assets/img/breadcrumb/breadcrumb-bg-1.jpg")">
    <div class="container">
        <div class="row">
            <div class="col-xxl-12">
                <div class="breadcrumb__content text-center p-relative z-index-1">
                    <h3 class="breadcrumb__title">Feel free to reach us</h3>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb area end -->
<!-- contact area start -->
<section class="contact__area pt-20 pb-120">
    <div class="container">
        <div class="row">
            <form id="frmContactUs">
                <div class="col-md-5">

                    <div class="form-group row mb-1">
                        <label for="name" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="name" placeholder="Name" required>
                        </div>
                    </div>
                    <div class="form-group row mb-1">
                        <label for="mobile" class="col-sm-2 col-form-label">Mobile</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="mobile" placeholder="Mobile" required>
                        </div>
                    </div>
                    <div class="form-group row mb-1">
                        <label for="course" class="col-sm-2 col-form-label">Course</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(m => m.CourseMasterId, Model.CourseMasterDD, "Select", new { @id = "course", @class = "wide form-control", @required = "required" })
                        </div>
                    </div>
                    <div class="form-group row mb-1">
                        <label for="course" class="col-sm-2 col-form-label">Batch</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(m => m.BatchId, Model.BatchDD, "Select", new { @id = "batch", @class = "wide form-control", @required = "required" })
                        </div>
                    </div>
                    <div class="form-group row mb-1" style="display:none;">
                        <label for="mode" class="col-sm-2 col-form-label">Mode</label>
                        <div class="col-sm-10">
                            <select class="wide form-control" id="mode">
                                <option>Face to Face</option>
                                <option>Online</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row mb-1">
                        <label for="city" class="col-sm-2 col-form-label">City</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="city" placeholder="City" required>
                        </div>
                    </div>
                    <div class="form-group row mb-1">
                        <label for="message" class="col-sm-2 col-form-label">Message</label>
                        <div class="col-sm-10">
                            <textarea type="text" class="form-control" id="message" placeholder="Message" rows="3"></textarea>
                        </div>
                    </div>

                </div>
                <div class="form-group row mb-1">
                    <label for="message" class="col-sm-1 col-form-label">&nbsp;</label>
                    <label for="message" class="col-sm-2 col-form-label"><button type="button" id="btnContactSubmit" class="btn btn-success">Submit</button></label>

                </div>
            </form>
        </div>
    </div>
</section>
<!-- contact area end -->
<!-- Custom Js -->
<script src="@Url.Content("~/Scripts/custom/Enquiry/Enquiry.js")"></script>

<script>
    var enquiry = "@Url.Content("~/Home/Enquiry")";
    var GetBatch = "@Url.Content("~/Home/GetBatch")";
</script>